<div id="drive-dir-browser" class="js-loading">
    <p class="text-center" style="padding-top:100px;">Loading directory contents...</p>
</div>
{{ renderScript('browse/dirbrowser.twig', 'maniple-drive') | raw }}
{% if dir %}
<script>window.location = String(location).replace(/#.*$/, '') + '#/{{ dir.getId() }}';</script>
{% endif %}
